{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@assets/*": ["assets/*"],
      "@styles/*": ["styles/*"],
      "@hooks/*": ["hooks/*"],
      "@context/*": ["context/*"],
      "@constants/*": ["constants/*"],
      "@types/*": ["types/*"],
      "@config/*": ["config/*"],
      "@helpers/*": ["helpers/*"]
    }
  },
  "include": ["src"]
}
